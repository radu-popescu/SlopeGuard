<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlopeGuard.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="SpeedLabel" Text="Speed: 0 km/h" FontSize="28"/>
            <Label x:Name="AltitudeLabel" Text="Altitude: 0 m" FontSize="28"/>
            <Label x:Name="DurationLabel" Text="Duration: 00:00:00" FontSize="28"/>
            <Label x:Name="AscentsLabel" Text="Ascents: 0" FontSize="28"/>
            <Label x:Name="DescentsLabel" Text="Descents: 0" FontSize="28"/>
            <Button Text="SpeedLimit" Clicked="OnSettingsClicked"/>
            

            <Button Text="Start Session"
                x:Name="StartButton"
                Clicked="OnStartClicked" />

            <Button Text="Stop Session"
                x:Name="StopButton"
                Clicked="OnStopClicked"
                IsEnabled="False" />
            <Button Text="View Sessions" Clicked="OnViewSessionsClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
