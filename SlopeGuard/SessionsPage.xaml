<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SlopeGuard.Models"
             x:Class="SlopeGuard.SessionsPage"
             Title="Session History">

    <CollectionView x:Name="SessionList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:SkiSession">
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Execute">
                            <SwipeItem
                                Text="Delete"
                                BackgroundColor="Red"
                                Invoked="OnDeleteSession"
                                CommandParameter="{Binding Id}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Border
                        Stroke="Gray"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Margin="5"
                        Padding="10"
                        BackgroundColor="Black">

                        <VerticalStackLayout>
                            <Label Text="{Binding Date}" FontAttributes="Bold" />
                            <Label Text="{Binding Duration}" />
                            <Label Text="Max Speed: {Binding MaxSpeed} km/h" />
                            <Label Text="Distance: {Binding Distance} km" />
                            <Label Text="Ascents: {Binding Ascents}, Descents: {Binding Descents}" />
                        </VerticalStackLayout>

                    </Border>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
